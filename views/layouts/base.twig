<!DOCTYPE html>
<html {{ site.language_attributes }}>
    {% block head %}
        {% include 'partials/head.twig' %}
    {% endblock %}

    <body class="{{ body_class }} bg-firm_bg">
        {{ function('wp_body_open') }}
        {% block header %}
            {% include 'partials/header.twig' %}
        {% endblock %}

        {% block page_content %}
        <section id="content" class="content-wrapper">
            <div class="wrapper">
                {% block content %}
                    {% if title %}
                        <h1>{{ title }}</h1>
                    {% endif %}
                    <content>
                        Sorry, no content
                    </content>
                {% endblock %}
            </div>
        </section>
        {% endblock %}

        {% block footer %}
            {% include 'partials/footer.twig' %}
        {% endblock %}
        {{ function('wp_footer') }}
        {% do action('get_footer') %}
    </body>
</html>
